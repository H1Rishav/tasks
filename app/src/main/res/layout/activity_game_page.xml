<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gamemain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamePageActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/cross_button"
        android:src="@drawable/cross"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935"
        tools:layout_editor_absoluteX="39dp">
        <TextView
            android:id="@+id/pl1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/trianglebtn"
            android:backgroundTint="@color/black"
            android:paddingTop="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:layout_alignParentRight="true"
            android:text="HRISHAV"

            android:textAlignment="center"
            android:textColor="@color/player_one"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginEnd="90dp"
            android:layout_marginRight="150dp"
            />

        <TextView
            android:id="@+id/pl1_score"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_btn2"
            android:gravity="center"
            android:padding="10dp"
            android:text="SCO"
            android:layout_alignParentRight="true"

            android:layout_marginStart="160dp"
            android:textColor="@color/player_one"
            android:textSize="20dp"
            android:textStyle="bold" />




    </RelativeLayout>

    <GridLayout
        android:id="@+id/game_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintTop_toTopOf="@id/relativeLayout"
        tools:layout_editor_absoluteX="10dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/pl2_score"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="SCO"
            android:gravity="center"
            android:textColor="@color/player_two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:rotation="180"
            android:background="@drawable/circle_btn2" />

        <TextView

            android:id="@+id/pl2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/trianglebtn"
            android:backgroundTint="@color/black"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:rotation="180"
            android:text="HRISHAV"
            android:layout_marginLeft="70dp"
            android:textAlignment="center"
            android:textColor="@color/player_two"
            android:layout_alignLeft="@id/pl2_score"
            android:layout_marginStart="90dp"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>